---
import { getCollection } from 'astro:content'
import BlogCard from '../../components/BlogCard.astro'
import BaseLayout from '../../layouts/BaseLayout.astro'

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
)
---

<BaseLayout>
	<main class="app-container pt-36">
		<h1 class="text-6xl pb-8 font-bold">Blog</h1>
		<p class="md:w-2/3 text-lg leading-[2rem]">
			Welcome to my study ablog (study abroad blog)! Here you'll find
			documentation of my adventures in Copenhagen where I'm studying for the
			semester, along with my travels around the area! Hope you enjoy your visit
			as much as I am enjoying mine :,)
		</p>
	</main>
	<section class="app-container py-12">
		<ul class="posts-grid-container">
			{
				posts.map((post) => (
					<li>
						<BlogCard post={post} />
					</li>
				))
			}
		</ul>
	</section>
</BaseLayout>

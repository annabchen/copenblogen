---
import BaseLayout from '../layouts/BaseLayout.astro'
import { SITE_BASE, SocialLinks } from '../consts'
import { Icon } from 'astro-icon/components'
import BlogCard from '../components/BlogCard.astro'
import { getCollection } from 'astro:content'

const posts = (await getCollection('blog'))
	.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
	.slice(0, 4)
---

<BaseLayout>
	<section
		class ="min-h-screen bg-cover bg-center bg-no-repeat"
		style="background-image: url('/src/assets/cover_image.jpg');"
	>
		<div class="app-container flex flex-col gap-12 justify-center py-36 md:py-48 pt-44 md:pt-56 relative">    
			<h3 class="text-8xl font-bold leading-none">Copenblogen-</h3>
			<h4 class="text-6xl font-bold leading-none">A semester in Copenhagen</h4>
		</div>
	</section>

	<!-- Recent Posts Section -->
	<section class="app-container">
		<h2 class="section-title">Recent Posts</h2>
		<div class="posts-grid-container">
			{posts.map((post) => <BlogCard post={post} />)}
		</div>
		<a class="btn-secondary" href={`${SITE_BASE}/blog`}
			>Read All
			<Icon size={20} name="mdi:arrow-right" />
		</a>
	</section>

	<!-- Recent Posts Section -->
	<section class="app-container py-42 grid lg:grid-cols-2 gap-28 lg:gap-10">
		<div class="space-y-6">
			<h2 class="section-title">About Me</h2>
			<p class="text-lg max-w-xl pb-4">
				My name is Annabelle, and I'm current junior at Amherst College.
				I study computer science and math, and I'm passionate about art!
			</p>
			<a class="btn-secondary" href={`${SITE_BASE}/about`}
				>see About!
				<Icon size={20} name="mdi:arrow-right" />
			</a>
		</div>
		<div class="space-y-6">
			<h2 class="section-title">Get in touch</h2>
			<p class="text-lg max-w-xl">
				Use the button below for my email!
			</p>
			<div class="flex flex-wrap mt-auto space-x-4">
				<a
					class="btn-primary"
					href="mailto:annabllechen@gmail.com"
					download
					target="_blank"
					>reach out!
					<Icon height={20} name="mdi:email" />
				</a>
			</div>
		</div>
	</section>
</BaseLayout>
